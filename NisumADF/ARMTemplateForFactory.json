{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "NisumADF"
		},
		"SAPSQLLinkedService_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SAPSQLLinkedService'"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/SAPSQLLinkedService')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "On prem SQL Server linked service",
				"annotations": [],
				"type": "SqlServer",
				"typeProperties": {
					"connectionString": "[parameters('SAPSQLLinkedService_connectionString')]"
				},
				"connectVia": {
					"referenceName": "selfhostedruntime",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/integrationRuntimes/selfhostedruntime')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AutoResolveIntegrationRuntime')]",
			"type": "Microsoft.DataFactory/factories/integrationRuntimes",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "Managed",
				"typeProperties": {
					"computeProperties": {
						"location": "AutoResolve",
						"dataFlowProperties": {
							"computeType": "General",
							"coreCount": 8,
							"timeToLive": 0
						}
					}
				},
				"managedVirtualNetwork": {
					"type": "ManagedVirtualNetworkReference",
					"referenceName": "default"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/managedVirtualNetworks/default')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/selfhostedruntime')]",
			"type": "Microsoft.DataFactory/factories/integrationRuntimes",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "SelfHosted",
				"typeProperties": {}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/default')]",
			"type": "Microsoft.DataFactory/factories/managedVirtualNetworks",
			"apiVersion": "2018-06-01",
			"properties": {},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/copypipeline')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "copy data from SQL Table Equep",
				"activities": [
					{
						"name": "copy-data",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "dbo.TBL_EQUIPOS"
							},
							{
								"name": "Destination",
								"value": "dbo.TBL_EQUIPOS"
							}
						],
						"typeProperties": {
							"source": {
								"type": "SqlServerSource",
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
							},
							"sink": {
								"type": "SqlServerSink",
								"writeBehavior": "insert",
								"sqlWriterUseTableLock": false
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "EQUIPO_ID",
											"type": "Int32",
											"physicalType": "int"
										},
										"sink": {
											"name": "EQUIPO_ID",
											"type": "Int32",
											"physicalType": "int"
										}
									},
									{
										"source": {
											"name": "NOMBRE_EQUIPO",
											"type": "String",
											"physicalType": "varchar"
										},
										"sink": {
											"name": "NOMBRE_EQUIPO",
											"type": "String",
											"physicalType": "varchar"
										}
									},
									{
										"source": {
											"name": "MARCA",
											"type": "Int32",
											"physicalType": "int"
										},
										"sink": {
											"name": "MARCA",
											"type": "Int32",
											"physicalType": "int"
										}
									},
									{
										"source": {
											"name": "SERIE",
											"type": "String",
											"physicalType": "varchar"
										},
										"sink": {
											"name": "SERIE",
											"type": "String",
											"physicalType": "varchar"
										}
									},
									{
										"source": {
											"name": "LINEA",
											"type": "Int32",
											"physicalType": "int"
										},
										"sink": {
											"name": "LINEA",
											"type": "Int32",
											"physicalType": "int"
										}
									},
									{
										"source": {
											"name": "LUBRICACION",
											"type": "Boolean",
											"physicalType": "bit"
										},
										"sink": {
											"name": "LUBRICACION",
											"type": "Boolean",
											"physicalType": "bit"
										}
									},
									{
										"source": {
											"name": "INGRESADOPOR",
											"type": "Int32",
											"physicalType": "int"
										},
										"sink": {
											"name": "INGRESADOPOR",
											"type": "Int32",
											"physicalType": "int"
										}
									},
									{
										"source": {
											"name": "MODIFICADOPOR",
											"type": "Int32",
											"physicalType": "int"
										},
										"sink": {
											"name": "MODIFICADOPOR",
											"type": "Int32",
											"physicalType": "int"
										}
									},
									{
										"source": {
											"name": "FECHAINGRESO",
											"type": "DateTime",
											"physicalType": "smalldatetime"
										},
										"sink": {
											"name": "FECHAINGRESO",
											"type": "DateTime",
											"physicalType": "smalldatetime"
										}
									},
									{
										"source": {
											"name": "FECHAMODIFICACION",
											"type": "DateTime",
											"physicalType": "smalldatetime"
										},
										"sink": {
											"name": "FECHAMODIFICACION",
											"type": "DateTime",
											"physicalType": "smalldatetime"
										}
									}
								],
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "SQLDatasets",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "SQLDatasets",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SQLDatasets')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SQLDatasets')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "SAPSQLLinkedService",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "SqlServerTable",
				"schema": [
					{
						"name": "EQUIPO_ID",
						"type": "int",
						"precision": 10
					},
					{
						"name": "NOMBRE_EQUIPO",
						"type": "varchar"
					},
					{
						"name": "MARCA",
						"type": "int",
						"precision": 10
					},
					{
						"name": "SERIE",
						"type": "varchar"
					},
					{
						"name": "LINEA",
						"type": "int",
						"precision": 10
					},
					{
						"name": "LUBRICACION",
						"type": "bit"
					},
					{
						"name": "INGRESADOPOR",
						"type": "int",
						"precision": 10
					},
					{
						"name": "MODIFICADOPOR",
						"type": "int",
						"precision": 10
					},
					{
						"name": "FECHAINGRESO",
						"type": "smalldatetime",
						"precision": 16,
						"scale": 0
					},
					{
						"name": "FECHAMODIFICACION",
						"type": "smalldatetime",
						"precision": 16,
						"scale": 0
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "TBL_EQUIPOS"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/SAPSQLLinkedService')]"
			]
		}
	]
}